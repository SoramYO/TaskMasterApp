<Window
    x:Class="TaskMasterAppUI.Windows.UserWindows.HomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:TaskMasterAppUI.Windows.UserWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:uc="clr-namespace:TaskMasterAppUI.Windows.UserControls"
    Title="HomeWindow"
    Width="900"
    Height="590"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Trebuchet MS"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <!--  Grid Background  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Background="#fefefe" CornerRadius="20 0 0 20" />
            <Border
                Grid.Column="1"
                Background="#c73f69"
                CornerRadius="0 20 20 0"
                MouseDown="Border_MouseDown" />
        </Grid>
        <!--  Grid Control  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <!--  Create exit program  -->
                <Button
                    x:Name="ExitButton"
                    Width="22"
                    Margin="20,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="ExitButton_Click"
                    Style="{StaticResource button}">
                    <fa:ImageAwesome Foreground="Aquamarine" Icon="Times" />
                </Button>
                <TextBlock
                    Grid.Column="1"
                    Margin="0,10,0,60"
                    HorizontalAlignment="Center"
                    FontSize="40"
                    Foreground="Black"
                    Text="Task Master" />

                <Calendar
                    x:Name="CalendarChoose"
                    CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle1}"
                    CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle2}"
                    SelectedDatesChanged="CalendarChoose_SelectedDatesChanged"
                    Style="{DynamicResource CalendarStyle1}" />

            </StackPanel>
            <StackPanel Grid.Column="1">

                <!--  Titles  -->
                <StackPanel Margin="30,45,30,10" Orientation="Horizontal">
                    <TextBlock
                        x:Name="SelectedDay"
                        FontSize="50"
                        Foreground="#FFFFFF" />

                    <StackPanel
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center">
                        <TextBlock
                            x:Name="SelectedMonth"
                            FontSize="24"
                            Foreground="#FFFFFF" />
                        <TextBlock
                            x:Name="SelectedDayOfWeek"
                            FontSize="14"
                            Foreground="#EBA5BB" />
                    </StackPanel>

                </StackPanel>

                <TextBlock
                    Margin="35,0,20,0"
                    FontSize="16"
                    Foreground="#EBA5BB"
                    Text="5 tasks- 2 dates left" />

                <!--  Add Notes  -->
                <Border
                    Width="355"
                    Margin="0,30,0,20"
                    Padding="17,15,5,15"
                    HorizontalAlignment="Center"
                    Background="#CD5278"
                    CornerRadius="10">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <!--  Title  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    Foreground="#EBA5BB"
                                    Icon="Header" />
                                <TextBox
                                    Name="TitleTextBox"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource textBox}"
                                    Text="Enter Task Title" />
                            </Grid>

                            <Separator
                                Height="0.8"
                                Margin="0,12,0,11"
                                Background="#C14269" />

                            <!--  Description  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    Foreground="#EBA5BB"
                                    Icon="Pencil" />
                                <TextBox
                                    Name="DescriptionTextBox"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource textBox}"
                                    Text="Enter Description (optional)" />
                            </Grid>

                            <Separator
                                Height="0.8"
                                Margin="0,12,0,11"
                                Background="#C14269" />

                            <!--  Time Picker  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Icon for Time Picker  -->
                                <fa:ImageAwesome
                                    Grid.Column="0"
                                    Width="15"
                                    Height="15"
                                    VerticalAlignment="Center"
                                    Foreground="#EBA5BB"
                                    Icon="ClockOutline" />

                                <!--  Start Time Picker  -->
                                <toolkit:TimePicker
                                    Name="StartTimePicker"
                                    Grid.Column="1"
                                    Width="100"
                                    Margin="10,0,10,0"
                                    VerticalAlignment="Center"
                                    Format="Custom"
                                    FormatString="HH:mm" />

                                <!--  End Time Picker  -->
                                <toolkit:TimePicker
                                    Name="EndTimePicker"
                                    Grid.Column="2"
                                    Width="100"
                                    VerticalAlignment="Center"
                                    Format="Custom"
                                    FormatString="HH:mm" />
                            </Grid>



                            <Separator
                                Height="0.8"
                                Margin="0,12,0,11"
                                Background="#C14269" />

                            <!--  Priority  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    Foreground="#EBA5BB"
                                    Icon="Flag" />
                                <ComboBox
                                    Name="PriorityComboBox"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    SelectedIndex="1"
                                    Style="{StaticResource comboBoxStyle}">
                                    <ComboBoxItem Content="Low" Tag="1" />
                                    <ComboBoxItem Content="Medium" Tag="2" />
                                    <ComboBoxItem Content="High" Tag="3" />
                                </ComboBox>
                            </Grid>

                            <Separator
                                Height="0.8"
                                Margin="0,12,0,11"
                                Background="#C14269" />

                            <!--  Category  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <fa:ImageAwesome
                                    Width="15"
                                    Height="15"
                                    Foreground="#EBA5BB"
                                    Icon="Tags" />
                                <ComboBox
                                    Name="CategoryComboBox"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    DisplayMemberPath="CategoryName"
                                    Style="{StaticResource comboBoxStyle}" />

                                <Button
                                    Grid.Column="2"
                                    Margin="5,0,0,0"
                                    Style="{StaticResource addCategoryButtonStyle}">
                                    <fa:ImageAwesome
                                        Width="18"
                                        Height="18"
                                        Foreground="White"
                                        Icon="PlusCircle" />
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!--  Add Task Button  -->
                        <Button
                            x:Name="AddTask"
                            Grid.Column="1"
                            Click="AddTask_Click"
                            Style="{StaticResource button}">
                            <fa:ImageAwesome
                                Width="28"
                                Height="28"
                                Foreground="#f9f9f9"
                                Icon="PlusCircle" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Motes  -->
                <uc:Item
                    Title="Sleep"
                    Icon="CheckCircle"
                    IconBell="BellSlash"
                    Time="10:17 - 02:10"
                    Color="#eba5bb" />
                <uc:Item
                    Title="Eat"
                    Icon="CheckCircle"
                    IconBell="BellSlash"
                    Time="10:17 - 02:10"
                    Color="#eba5bb" />
                <uc:Item
                    Title="Code"
                    Icon="CheckCircle"
                    IconBell="BellSlash"
                    Time="10:17 - 02:10"
                    Color="#eba5bb" />

            </StackPanel>
        </Grid>
    </Grid>
</Window>
